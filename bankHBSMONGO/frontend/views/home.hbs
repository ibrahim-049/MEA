{{>header}}
{{>navbar}}

<table class="table table-bordered my-4">
    <thead>
        <tr>
            <th>_id</th>
            <th>Name</th>
            <th>Balance</th>
        </tr>
    </thead>

    <tbody>
        {{#if isEmpty}}
            <tr class="alert alert-danger text-center">
                <td colspan="4">No Customers Yet</td>
            </tr>
        {{else}}
            {{#each result}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.balance}}</td>
                    <td>
                          
    
                        <div class="container">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <a href="/show/{{this._id}}" class="btn btn-success">Show Customer</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="/edit/{{this._id}}" class="btn btn-warning mx-2">Edit Customer</a>
                                </li>
                                <li class="list-inline-item">
                                    <form class="form-inline pull-right" method="post" action="" role="form">
                                        <button href="/delete/{{this._id}}" class="btn btn-danger ">Delete Customer</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {{/each}}
        {{/if}}
    </tbody>
</table>
{{>footer}}
